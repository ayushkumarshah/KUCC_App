<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Routine.Batch"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/SelectCourse"
        android:clickable="true"
        android:onClick="selectCourse"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="72dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="140dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/select_course_text"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="@string/select_course" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/set_course"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/SelectYear"
        android:clickable="true"
        android:onClick="selectYear"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="72dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="140dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/select_year_text"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="@string/select_year" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/set_year"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/SelectSemester"
        android:clickable="true"
        android:onClick="selectSemester"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="72dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="140dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/select_sem_text"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="@string/select_semester" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/set_sem"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Save" />


</LinearLayout>
