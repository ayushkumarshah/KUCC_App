<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Routine.Batch"
    android:orientation="vertical"
    android:background="#3F51B5"
    >

   <LinearLayout
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:context=".Routine.Batch"
       android:orientation="vertical"
       android:background="#3F51B5"


       >

    <RelativeLayout
        android:id="@+id/relative_welcome"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >
        <LinearLayout
            android:id="@+id/linear_welcome"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Welcome"
                android:textColor="#fff"
                android:textSize="24dp"

                />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"
            android:layout_below="@+id/linear_welcome"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"

            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/SelectCourse"
        android:clickable="true"
        android:layout_gravity="center"
        android:onClick="selectCourse"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="72dp"
        android:focusable="true"
        android:layout_marginTop="30dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/select_course_text"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text=" Select Course "
                android:textColor="#fff"
                android:background="@drawable/edit_style"
                android:fontFamily="helvetica"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/set_course"
                android:textSize="15sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/SelectYear"
        android:clickable="true"
        android:onClick="selectYear"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="72dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/select_year_text"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="  Select year  "
                android:textColor="#fff"
                android:fontFamily="helvetica"
                android:background="@drawable/edit_style"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/set_year"
                android:textSize="15sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/SelectSemester"
        android:clickable="true"
        android:onClick="selectSemester"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="72dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/select_sem_text"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text=" Select Semester "
                android:textColor="#fff"
                android:background="@drawable/edit_style"


                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/set_sem"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="285dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Save"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_style"
        />

   </LinearLayout>



</ScrollView>
